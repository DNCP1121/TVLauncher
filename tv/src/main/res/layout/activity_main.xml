<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"  android:id="@+id/main_container"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.zxh.soj.view.viewpager.TabPageIndicator
        android:id="@+id/main_indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_backgroup" />

    <ViewPager android:id="@+id/main_pager"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".MainActivity" tools:deviceIds="tv" tools:ignore="MergeRootFrame"
        />

</LinearLayout>


